<% @books.each do |book| %>
  <section id="book-<%= book.id %>">
      <p>Title: <%= book.title %></p>
      <p>Page Count: <%= book.number_of_pages %></p>
      <p>Publication Year: <%= book.publication_year %></p>
      <p>Authors:</p>
      <% book.authors.each do |author|  %>
      <p><%= link_to "#{author.name}", author_path(author) %></p>
      <% end %>
  </section>
<% end %>
